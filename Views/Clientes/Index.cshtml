@model List<Cliente>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Clientes</h2>
@Html.ActionLink("Nuevo Cliente", "Nuevo", "Clientes", null, new { @class="btn btn-info" })
@if (Model.Count == 0)
{
    <h3>No hay clientes cargados todavía...</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Tipo de Membresia</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@Html.ActionLink(@cliente.Nombre, "Detalles", new { id = cliente.Id})</td>
                    <td>@cliente.TipoMembresia.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
}
