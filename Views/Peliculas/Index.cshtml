@model List<MVC.Models.Pelicula>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Peliculas</h1>
@if(Model.Count == 0)
{
    <h2>No hay películas cargadas en el sistema todavía...</h2>
}
else
{
   <table class="table table-bordered table-hover">    
        <thead>
            <tr>
                <th>Id.</th>
                <th>Título</th>
                <th>Genero</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var pelicula in Model)
            {
                <tr>
                    <td>@pelicula.Id</td>
                    <td>@Html.ActionLink(@pelicula.Titulo, "Detalles", new { id = pelicula.Id})</td>
                    <td>@pelicula.Genero.Nombre</td>
                </tr>
            }        
        </tbody>
    </table> 
}


